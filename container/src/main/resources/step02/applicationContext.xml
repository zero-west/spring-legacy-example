<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="samsungTV" class="me.zw.container.polymorphism.step02.SamsungTV" init-method="initMethod" destroy-method="destroyMethod">
        <constructor-arg ref="speaker"></constructor-arg>
    </bean>
    <bean id="speaker" class="me.zw.container.polymorphism.step02.JBLSpeaker"></bean>
</beans>